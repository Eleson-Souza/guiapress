<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edição de Categoria</h2>
            </div>        
            <div class="card-body">
                <form method="POST" action="/categories/update">
                    <input type="hidden" name="id" id="id" value="<%= category.id %>">
                    <input type="text" name="title" id="title" placeholder="Defina o título da categoria" class="form-control" value="<%= category.title %>">
                    <button type="submit" class="btn btn-success mt-3">Atualizar</button>
                </form>
            </div>            
        </div>
    </div>
</body>
